<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="pojos.Sesion" table="sesiones">
        <id name="id"/>
        <property name="nombre"/>
        <property name="info"/>
        <property name="fechaHoraInicio"/>
        <property name="duracion"/>
        <property name="articulo"/>
        <set cascade="save-update" name="participantes" table="sesiones">
            <key column="sesion"/>
            <one-to-many class="pojos.Paricipante"/>
        </set>
    </class>

</hibernate-mapping>
